@model  HomeViewModel

<h2>@Model.Title</h2>
@foreach(var pizza in Model.Pizzas)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@pizza.ImageUrl" alt="" />
            <div class="caption">
                <h3 class="pull-right">@pizza.Price.ToString("c")</h3>
                <h3>
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@pizza.Id">@pizza.Name</a>
                </h3>
                <p>@pizza.ShortDescription</p>
            </div>
        </div>
    </div>
}

